%h1
  Suggestion
- if @suggestion.errors.any?
  - @suggestion.errors.full_messages.each do |error|
    Errors: 
    = error
= form_for [@bugcycle, @suggestion] do |f|
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :category_id
    %br
    = f.collection_select :category_id, @categories, :id, :category
  %p
    = f.label :image
    %br
    = f.file_field :image
  = f.submit