- if @bugcycle.errors.any?
  - @bugcycle.errors.full_messages.each do |error|
    Errors: 
    = error
    
= form_for @bugcycle, html: { multipart: true } do |f|
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :image
    %br
    = f.file_field :image
  = f.submit

= link_to 'Main page', root_path